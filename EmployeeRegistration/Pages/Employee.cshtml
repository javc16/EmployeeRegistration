@page
@model EmployeeRegistration.Pages.EmployeeModel
@{
}

<h1>Employee</h1>

<div class="d-flex">
    <div class="col-4">
        <form class="row" method="post">
            <input type="number" placeholder="Id" name="id" />
            <input type="text" placeholder="Last Name" name="lastName" />
            <input type="text" placeholder="First Name" name="firstName" />
            <input type="text" placeholder="Phone Number" name="phone" />
            <input type="text" placeholder="Zip Code" name="zip" />
            <input type="date" placeholder="Hire Date" name="hireDate" />
            <button type="submit">Add</button>
        </form>
    </div>
    <div class="col-2"></div>
    <div class="col-6">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Phone</th>
                    <th>ZipCode</th>
                    <th>Hire Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>
                            @employee.Id
                        </td>
                        <td>
                            @employee.FirstName
                        </td>
                        <td>
                            @employee.LastName
                        </td>
                        <td>
                            @employee.Phone
                        </td>
                        <td>
                            @employee.Zip
                        </td>
                        <td>
                            @employee.HireDate
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>







